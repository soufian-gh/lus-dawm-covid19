<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="@color/color_gray"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_width="290dp"
            android:layout_height="120dp"
            android:id="@+id/item1"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="This application was developed by GHAOUTI SOUFIANE and BATRI MOHAMED for an end of studies project in order to display statistics interactively on covid19"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="18dp">
            </TextView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="@color/color_gray"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_width="290dp"
            android:layout_height="120dp"
            android:id="@+id/item2"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cette application a été développée par SOUFIANE et BATRI MOHAMED pour un projet de fin d'études afin d'afficher des statistiques de manière interactive sur covid19"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="18dp">
            </TextView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="@color/color_gray"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_width="290dp"
            android:layout_height="120dp"
            android:id="@+id/item3"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="تم تطوير هذا التطبيق من قبل سفيان الغوتي ومحمد البطري لمشروع التخرج من أجل عرض الإحصائيات بشكل تفاعلي عن كوفيد 19"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="18dp">
            </TextView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>















</LinearLayout>